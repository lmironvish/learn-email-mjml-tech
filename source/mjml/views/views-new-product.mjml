  </mj-column>

  <mj-column mj-class="views-new-product__right-col"
            css-class="views-new-product__right-col">

    <mj-image mj-class="views-new-product__img"
              css-class="views-new-product__img"

              src="{{{views-new-product__img.src}}}"
